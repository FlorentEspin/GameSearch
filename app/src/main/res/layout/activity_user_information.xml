<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gameproject.gamesearch.UserInformation">

    <TextView android:text="@string/Login" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblLogin"
        android:layout_above="@+id/tbPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblPassword"
        android:layout_alignBaseline="@+id/tbPassword"
        android:layout_alignBottom="@+id/tbPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/tbLogin"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/lblEditorName"
        android:layout_alignLeft="@+id/tbPassword"
        android:layout_alignStart="@+id/tbPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="blabla"
        android:id="@+id/tbPassword"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/tbLogin"
        android:layout_toRightOf="@+id/lblPassword"
        android:layout_toEndOf="@+id/lblPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblEditorName"
        android:text="@string/UserID"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tbUserID"
        android:layout_alignTop="@+id/lblEditorName"
        android:layout_alignLeft="@+id/tbLogin"
        android:layout_alignStart="@+id/tbLogin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:id="@+id/btnModifierJeu"
        android:layout_below="@+id/tbPassword"
        android:layout_toRightOf="@+id/lblPassword"
        android:layout_toEndOf="@+id/lblPassword"
        android:layout_marginTop="84dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:id="@+id/btnDeleteJeu"
        android:layout_alignBottom="@+id/btnModifierJeu"
        android:layout_toRightOf="@+id/btnModifierJeu"
        android:layout_toEndOf="@+id/btnModifierJeu" />

</RelativeLayout>
