<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="gameproject.gamesearch.UserInformation">

    <TextView android:text="Login :" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblLogin"
        android:textColor="@color/White"
        android:textSize="22sp"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/tbUserID"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Mot de passe :"
        android:textColor="@color/White"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblPassword"
        android:layout_below="@+id/tbLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="New text"
        android:textSize="22sp"
        android:id="@+id/tbLogin"
        android:layout_below="@+id/lblLogin"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="New text"
        android:id="@+id/tbPassword"
        android:textSize="22sp"
        android:layout_below="@+id/lblPassword"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblUserID"
        android:text="Numero :"
        android:textColor="@color/White"
        android:textSize="22sp"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tbUserID"
        android:text="New Text"
        android:textSize="22sp"
        android:layout_alignTop="@+id/lblUserID"
        android:layout_alignLeft="@+id/tbLogin"
        android:layout_alignStart="@+id/tbLogin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:id="@+id/btnKindModify"
        android:layout_marginTop="28dp"
        android:textSize="20sp"
        android:background="@color/Orange"
        android:layout_below="@+id/tbPassword"
        android:layout_alignLeft="@+id/lblPassword"
        android:layout_alignStart="@+id/lblPassword"
        android:layout_alignRight="@+id/lblPassword"
        android:layout_alignEnd="@+id/lblPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:background="@color/Orange"
        android:id="@+id/btnDeleteJeu"
        android:layout_marginTop="27dp"
        android:textSize="20sp"
        android:layout_below="@+id/btnKindModify"
        android:layout_alignLeft="@+id/btnKindModify"
        android:layout_alignStart="@+id/btnKindModify"
        android:layout_alignRight="@+id/btnKindModify"
        android:layout_alignEnd="@+id/btnKindModify" />

</RelativeLayout>
