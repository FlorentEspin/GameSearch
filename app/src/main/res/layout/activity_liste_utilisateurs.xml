<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="gameproject.gamesearch.Liste_utilisateurs">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Liste  des  utilisateur"
        android:layout_centerHorizontal="true"
        android:textColor="@color/White"
        android:textSize="28dp"
        android:id="@+id/titre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tbUserName"
        android:layout_alignEnd="@+id/tbUserName" />

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recyclerViewUser"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="350dp"
        tools:context=".MainActivity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnRechercherUser" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbUserName"
        android:background="@color/White"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/titre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechercher"
        android:textSize="14.1sp"
        android:id="@+id/btnRechercherUser"
        android:layout_below="@+id/tbUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reinitialiser"
        android:textSize="14.1sp"
        android:id="@+id/btnReinitialiserUser"
        android:layout_alignTop="@+id/btnRechercherUser"
        android:layout_toRightOf="@+id/btnRechercherUser"
        android:layout_toEndOf="@+id/btnRechercherUser" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouveau"
        android:textSize="14.1sp"
        android:id="@+id/btnCreateUser"
        android:layout_below="@+id/tbUserName"
        android:layout_toRightOf="@+id/btnReinitialiserUser"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
