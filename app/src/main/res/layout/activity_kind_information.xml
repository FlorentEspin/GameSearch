<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gameproject.gamesearch.KindInformation">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:id="@+id/btnKindModifyKindInformation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="143dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:id="@+id/btnDeleteKindKindInformation"
        android:layout_alignBottom="@+id/btnKindModifyKindInformation"
        android:layout_toRightOf="@+id/btnKindModifyKindInformation"
        android:layout_toEndOf="@+id/btnKindModifyKindInformation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/KindID"
        android:id="@+id/lblKindIDKindInformation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/KindName"
        android:id="@+id/lblUserID"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/lblKindIDKindInformation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tbKindNameKindInformation"
        android:layout_alignTop="@+id/lblUserID"
        android:layout_toRightOf="@+id/lblUserID"
        android:layout_toEndOf="@+id/lblUserID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tbKindIDKindInformation"
        android:layout_above="@+id/lblUserID"
        android:layout_toRightOf="@+id/btnKindModifyKindInformation"
        android:layout_toEndOf="@+id/btnKindModifyKindInformation" />

</RelativeLayout>
