<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gameproject.gamesearch.EditorInformation">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:id="@+id/btnModifierJeu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="143dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:id="@+id/btnDeleteEditor"
        android:layout_alignBottom="@+id/btnModifierJeu"
        android:layout_toRightOf="@+id/btnModifierJeu"
        android:layout_toEndOf="@+id/btnModifierJeu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/EditorID"
        android:id="@+id/lblEditorID"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/EditorName"
        android:id="@+id/lblEditorName"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/lblEditorID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tbEditorID"
        android:layout_alignTop="@+id/lblEditorID"
        android:layout_toRightOf="@+id/lblEditorName"
        android:layout_toEndOf="@+id/lblEditorName"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tbEditorName"
        android:layout_alignTop="@+id/lblEditorName"
        android:layout_alignLeft="@+id/tbEditorID"
        android:layout_alignStart="@+id/tbEditorID" />
</RelativeLayout>
