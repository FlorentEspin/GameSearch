<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="gameproject.gamesearch.Liste_utilisateurs">

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbGameName"
        android:layout_marginTop="49dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechercher"
        android:id="@+id/btnRechercher"
        android:layout_below="@+id/tbGameName"
        android:layout_toLeftOf="@+id/btnReinitialiser"
        android:layout_toStartOf="@+id/btnReinitialiser" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Réinitialiser"
        android:id="@+id/btnReinitialiser"
        android:layout_alignBottom="@+id/btnRechercher"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créer un utilisateur"
        android:id="@+id/btnCreateUser"
        android:layout_alignTop="@+id/btnReinitialiser"
        android:layout_toRightOf="@+id/btnReinitialiser"
        android:layout_toEndOf="@+id/btnReinitialiser" />
</RelativeLayout>
