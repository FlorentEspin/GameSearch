<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gameproject.gamesearch.CreateEditeur">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/EditorName"
        android:id="@+id/lblEditeurNomCreateEditeur"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tbEditorNameCreateEditor"
        android:layout_below="@+id/lblEditeurNomCreateEditeur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/lblEditeurNomCreateEditeur"
        android:layout_alignEnd="@+id/lblEditeurNomCreateEditeur" />
    <!-- A RecyclerView with some commonly used attributes -->
    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recyclerViewEditorGameCreateEditeur"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        tools:context=".MainActivity"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creer"
        android:id="@+id/btnCreerCreateEditeur"
        android:layout_below="@+id/tbEditorNameCreateEditor"
        android:layout_alignRight="@+id/tbEditorNameCreateEditor"
        android:layout_alignEnd="@+id/tbEditorNameCreateEditor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
