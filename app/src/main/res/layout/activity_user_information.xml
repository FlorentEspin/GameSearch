<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="gameproject.gamesearch.UserInformation">

    <TextView android:text="@string/Login" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblLogin"
        android:layout_above="@+id/tbPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Mot de passe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblPassword"
        android:layout_alignBaseline="@+id/tbPassword"
        android:layout_alignBottom="@+id/tbPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="New text"
        android:background="@color/White"
        android:id="@+id/tbLogin"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/tbUserID"
        android:layout_alignLeft="@+id/tbPassword"
        android:layout_alignStart="@+id/tbPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="New text"
        android:background="@color/White"
        android:id="@+id/tbPassword"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/tbLogin"
        android:layout_toLeftOf="@+id/btnDeleteJeu"
        android:layout_toStartOf="@+id/btnDeleteJeu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblUserID"
        android:text="Numero"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tbUserID"
        android:layout_alignTop="@+id/lblUserID"
        android:layout_alignLeft="@+id/tbLogin"
        android:layout_alignStart="@+id/tbLogin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:id="@+id/btnKindModify"
        android:layout_below="@+id/tbPassword"
        android:layout_toRightOf="@+id/lblPassword"
        android:layout_toEndOf="@+id/lblPassword"
        android:layout_marginTop="84dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:id="@+id/btnDeleteJeu"
        android:layout_alignBottom="@+id/btnKindModify"
        android:layout_toRightOf="@+id/btnKindModify"
        android:layout_toEndOf="@+id/btnKindModify" />

</RelativeLayout>
