<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gameproject.gamesearch.EditorInformation"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/EditorID"
        android:id="@+id/lblEditorIDEditorInformation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/EditorID"
        android:id="@+id/lblEditorNameEditorInformation"
        android:layout_below="@+id/lblEditorIDEditorInformation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tbEditorNameEditorInformation"
        android:layout_alignBottom="@+id/lblEditorNameEditorInformation"
        android:layout_alignRight="@+id/btnSupprimerEditorEditorInformation"
        android:layout_alignEnd="@+id/btnSupprimerEditorEditorInformation" />
    <!-- A RecyclerView with some commonly used attributes -->
    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recyclerViewGameEditorEditorInformation"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        tools:context=".MainActivity"
        android:layout_below="@+id/btnModifierEditorEditorInformation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:id="@+id/btnModifierEditorEditorInformation"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tbIDEditorInformation"
        android:layout_toStartOf="@+id/tbIDEditorInformation" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:id="@+id/btnSupprimerEditorEditorInformation"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btnModifierEditorEditorInformation"
        android:layout_toEndOf="@+id/btnModifierEditorEditorInformation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tbIDEditorInformation"
        android:layout_above="@+id/tbEditorNameEditorInformation"
        android:layout_toRightOf="@+id/lblEditorIDEditorInformation"
        android:layout_toEndOf="@+id/lblEditorIDEditorInformation" />
</RelativeLayout>
